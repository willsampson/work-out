<div>
  <div>
    <h1>
      Spot #<%= @the_spot.id %> details
    </h1>

    <div>
      <div>
        <a href="/spots">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_spot/<%= @the_spot.id %>">
          Delete spot
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Region
      </dt>
      <dd>
        <%= @the_spot.region_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_spot.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_spot.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit spot
    </h2>

    <form action="/modify_spot/<%= @the_spot.id %>"  method="post" >
      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id" value="<%= @the_spot.region_id %>">
      </div>

      <button>
        Update spot
      </button>
    </form>
  </div>
</div>

<hr>
