<div>
  <h1>
    Categories
  </h1>
</div>

<hr>

<div>
  Cafes
</div>

<table>
  <tr>
    <th>
      spot
    </th>
  </tr>

  
      <% @matching_cafes.each do |a_cafe| %>
        <% cafe_id = a_cafe.spot_id %>
      <tr>
        <td>
          <%= Spot.where({:spot_id => cafe_id}).name %>
        </td>
      </tr>
      <%end%>

  <tr>

  </tr> 
</table>


<div>
  Libraries
</div>

<div>
  Hotels
</div>

<div>
  Public Spaces
</div>


<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_categories.each do |a_category| %>
      <tr>
        <td>
          <%= a_category.id %>
        </td>

        <td>
          <%= a_category.category %>
        </td>

        <td>
          <%= time_ago_in_words(a_category.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_category.updated_at) %> ago
        </td>

        <td>
          <a href="/categories/<%= a_category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

